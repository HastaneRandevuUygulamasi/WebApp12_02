                success: function (doktorlar) {
                    $('#doktor').empty();
                    $('#doktor').append('<option value="">doktor Seçin</option>');
                    $.each(doktorlar, function (i, doktor) {
                        $('#hastane').append('<option value="' + doktor.value + '">' + doktor.text + '</option>');
                    });
                }
            });
        });
