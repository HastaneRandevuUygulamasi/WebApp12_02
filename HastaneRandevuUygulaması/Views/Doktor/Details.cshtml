@model HastaneRandevuUygulaması.Models.Doktor

@{
    ViewData["Title"] = "Details";
}
@inject IHttpContextAccessor HttpContextAccessor
@if (HttpContextAccessor.HttpContext.Session.GetString("Yetki") != "Admin")
{
    var url = Url.Content("~/Home/Index");
    <script type="text/javascript">
        window.location.href = '@url';
    </script>
}
<h1>Details</h1>

<div>
    <h4>Doktor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doktorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doktorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.poliklinik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.poliklinik.poliklinikId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.doktorId">Edit</a> |
